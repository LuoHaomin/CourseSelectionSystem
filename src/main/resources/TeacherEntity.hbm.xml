<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.ustc.edu.course_selection_system.Bean.TeacherEntity" table="teacher" schema="hibernate">
        <id name="id">
            <column name="id" sql-type="varchar(20)" length="20"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(8)" length="8" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(60)" length="60" not-null="true"/>
        </property>
        <property name="phoneNumber">
            <column name="phoneNumber" sql-type="varchar(14)" length="14" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(1)" length="1"/>
        </property>
        <set name="teacherCoursesById" inverse="true">
            <key>
                <column name="teacher_id"/>
            </key>
            <one-to-many not-found="ignore" class="cn.ustc.edu.course_selection_system.Bean.TeacherCourseEntity"/>
        </set>
    </class>
</hibernate-mapping>