<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.ustc.edu.course_selection_system.Bean.StudentinfoEntity" table="studentinfo" schema="hibernate">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(8)" length="8"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(60)" length="60"/>
        </property>
        <property name="phoneNumber">
            <column name="phoneNumber" sql-type="varchar(14)" length="14" not-null="true"/>
        </property>
        <property name="major">
            <column name="major" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="admissionYear">
            <column name="admissionYear" sql-type="int"/>
        </property>
        <property name="position">
            <column name="position" sql-type="varchar(10)" length="10"/>
        </property>
    </class>
</hibernate-mapping>